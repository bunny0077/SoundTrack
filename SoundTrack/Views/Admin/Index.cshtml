@model SoundTrack.ModelView.UserLogin
@{
    ViewBag.Title = "Index";
}
<div class="d-flex justify-content-center loginDiv ">
    <div class="col-md-4 px-5 py-5 bg-light shadow rounded ">
        <form id="adminLoginForm">
            <span class="d-flex justify-content-center h3">Admin Login</span>
            <span class="d-flex justify-content-center h3" id="errorMsg"></span>
            <span id="adminLoginHeadError"></span>
            <div class="form-group">
                <label for="userName">User Name :</label>
                @*<input type="email" class="form-control" id="userName" placeholder="name@example.com">*@
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", id = "userName", placeholder = "Enter Email", autofocus = "", type = "Email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group">
                <label for="userPassword">Password :</label>
                @*<input type="password" class="form-control" id="userPassword" placeholder="Password">*@
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", id = "userPassword", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group d-md-flex justify-content-between mt-5">
                <div class="col-6 col-md-6 mb-2">
                    <button type="submit" class="btn btn-primary w-100" id="signInBtn">Sign in</button>
                </div>
                <div class="col-6 col-md-6">
                    <span class="d-flex justify-content-center btn btn-link" data-toggle="modal" id="fpBtn" data-target="#forgetPasswordAdminModal">Forgot Password?</span>
                </div>
            </div>
        </form>
    </div>

    <input type="hidden" id="forgorPasswordHF" value="">
    <input type="hidden" id="forgorPasswordEmailHF" value="">

</div>
@Html.Partial("AdminChangePassword")
@Html.Partial("AdminForgotPassword")
@section Scripts{
    <script src="~/Scripts/CustomScripts/AdminLogin.js" type="text/javascript"></script>
} 