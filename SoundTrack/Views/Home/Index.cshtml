@{
    ViewBag.Title = "Home Page";
}

<div id="carouselSoundTrack" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselSoundTrack" data-slide-to="0" class="active"></li>
        <li data-target="#carouselSoundTrack" data-slide-to="1"></li>
        <li data-target="#carouselSoundTrack" data-slide-to="2"></li>
        <li data-target="#carouselSoundTrack" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/UploadImage/AlanWalker.jpg" class="d-block w-100 imageProp" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Alan Walker - Faded</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/UploadImage/Pubg.jpg" class="d-block w-100 imageProp" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>PUBG</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/UploadImage/AlecBenjamin.jpg" class="d-block w-100 imageProp" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Alec Benjamin</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/UploadImage/COD.jpg" class="d-block w-100 imageProp" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Call Of Duty</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselSoundTrack" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselSoundTrack" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="d-md-flex justify-content-around">
    <div class="col-md-8 px-0 py-5 px-5 d-flex flex-wrap" id="cdDataDiv">
        @* Here CD Data *@
    </div>
    <div class="col-md-4 border-left py-5">
        <div id="rentItDiv"></div>
        @*<div class="border rounded bg-secondary text-white p-3 mb-3">
                <div class="d-flex ">
                    <span class="h4">Title : Faded</span>
                    <span class="ml-auto">Price : $10/day</span>
                </div>
                <span class="d-flex justify-content-end"><i class=' fas fa-trash-alt'></i></span>
            </div>*@
        <div id="rentingSection">
            <div class="d-flex mb-3">
                <label class="col-md-3">Total Days:</label>
                <div class="col-md-9">
                    <input type="number" class="form-control" id="rentDays" value="4" min="4" />
                    <small class="text-muted">(Minimum 4 days)</small>
                </div>
            </div>
            <button type="button" class="btn btn-success w-100" id="rentIt">Rent It!</button>
        </div>
        <div id="instructionSection" class="p-3">
            <h4>Instructions</h4>
            <ol>
                <li>30% Discount for customers who will take 3 CD’s at same one time on rent</li>
                <li>Minimum Rental period will be of 4 days</li>
                <li>Security charges on Rent ($5/CD)</li>
                <li>10% discount to Customers who are Members (Membership card holder)</li>
            </ol>
        </div>
    </div>

</div>
