@model SoundTrack.ModelView.UserLogin
<div class="modal fade" id="LogInModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="loginModalModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="loginModalModalLabel">User Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closeBtn">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-light">
                <form id="userLoginForm">
                    <input type="hidden" value="" id="userLoginInput" />
                    <div class="form-group">
                        <label for="userName">User Name :</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", id = "usrName", placeholder = "Enter Email", autofocus = "", type = "Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <label for="userPassword">Password :</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", id = "usrPassword", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group d-md-flex justify-content-between mt-5">
                        <div class="col-6 col-md-6 mb-2">
                            <button type="submit" class="btn btn-primary w-100" id="signInUserBtn">Sign in</button>
                        </div>
                        <div class="col-6 col-md-6">
                            <span class="d-flex justify-content-center btn btn-link" id="forgotPasswordBtn">Forgot Password?</span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-5">
                        <button class="btn btn-secondary w-100" data-toggle="modal" data-target="#registerModal" id="signUp">Sign Up</button>
                    </div>
                </form>
            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-primary" id="userRegisterBtn">Submit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="usrRegistrationCloseBtn">Close</button>
            </div>*@
        </div>
    </div>
</div>


